        }
        .stTextArea>div>textarea {
            background-color: black;
            color: yellow;
            border: 1px solid yellow;
        }
        .stRadio>div>label {
            color: yellow;
        }
        .stSlider>div>label {
            color: yellow;
        }
        .stMarkdown {
            color: yellow;
        }
